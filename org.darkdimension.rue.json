{
	"id": "org.darkdimension.rue",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "21.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "rue",
	"modules": [
		"shared-modules/glew/glew.json",
		"shared-modules/glu/glu-9.json",
		{
			"name": "avdl",
			"buildsystem": "simple",
			"build-commands": [
				"make -j4 prefix=${FLATPAK_DEST}",
				"make -j4 prefix=${FLATPAK_DEST} install"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/tomtsagk/avdl/archive/refs/tags/v0.4.3.tar.gz",
					"sha256": "fa80f556007b9ce56e8d110f7b0869a86765f860d37d77061643d6a9f2e7f3d0"
				}
			],
			"cleanup": [
				"/bin/avdl",
				"/include",
				"/share/avdl"
			]
		},
		{
			"name": "rue",
			"buildsystem": "simple",
			"build-commands": [
				"make -j4 prefix=${FLATPAK_DEST} LINKER_CUSTOM_FLAGS=\" -L ${FLATPAK_DEST}/lib \"",
				"make -j4 prefix=${FLATPAK_DEST} install"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/tomtsagk/rue/archive/refs/tags/v0.3.0-1.tar.gz",
					"sha256": "c9d787a5fb54d4dd1081ee449a7902272c2d297ceaff936b09bf1d639cfa4eb5"
				}
			]
		}
	],
	"finish-args": [
		"--device=dri",
		"--socket=x11",
		"--share=ipc",
		"--socket=pulseaudio"
	]
}
